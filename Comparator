using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Comparator
{
    class Program
    {
        static void Main()
        {
            double a, b, c;
            Console.WriteLine("You need to input three decimals");
            Console.Write("Enter first decimal : ");
            while (!Double.TryParse(Console.ReadLine(), out a))
            {
                Console.Write("This is not a number, try once again : ");
            }
            Console.Write("Enter second decimal : ");
            while (!Double.TryParse(Console.ReadLine(), out b))
            {
                Console.Write("This is not a number, try once again : ");
            }
            Console.Write("Enter third decimal : ");
            while (!Double.TryParse(Console.ReadLine(), out c))
            {
                Console.Write("This is not a number, try once again : ");
            }

            double max = Math.Max(Math.Max(a, b), c);

            Console.WriteLine("Max decimal is " + max);
            Console.ReadLine();

        }
    }
}
